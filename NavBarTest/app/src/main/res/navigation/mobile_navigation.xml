<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.navbartest.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_input_meal"
        android:name="com.example.navbartest.ui.inputmeal.InputMealFragment"
        android:label="@string/title_input_meal"
        tools:layout="@layout/fragment_input_meal" />

    <fragment
        android:id="@+id/navigation_ingredient"
        android:name="com.example.navbartest.ui.ingredient.IngredientFragment"
        android:label="@string/title_ingredient"
        tools:layout="@layout/fragment_ingredient" />

    <fragment
        android:id="@+id/navigation_recipe"
        android:name="com.example.navbartest.ui.recipe.RecipeFragment"
        android:label="@string/title_recipe"
        tools:layout="@layout/fragment_recipe" />

    <fragment
        android:id="@+id/navigation_shopping_list"
        android:name="com.example.navbartest.ui.shoppinglist.ShoppingListFragment"
        android:label="@string/title_shopping_list"
        tools:layout="@layout/fragment_shopping_list" />
</navigation>